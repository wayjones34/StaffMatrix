<UserControl x:Class="StaffMatrix.ShiftSchedulingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StaffMatrix"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Wrap everything in a ScrollViewer -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Shift Scheduling" FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Form with labels -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Employee"/>
                    <ComboBox x:Name="cmbEmployee" Width="150" DisplayMemberPath="FullName" SelectedValuePath="EmployeeID"/>
                </StackPanel>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Shift Date"/>
                    <DatePicker x:Name="shiftDate" Width="150"/>
                </StackPanel>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Start Time (HH:MM)"/>
                    <TextBox x:Name="txtStartTime" Width="100" Text="09:00"/>
                </StackPanel>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="End Time (HH:MM)"/>
                    <TextBox x:Name="txtEndTime" Width="100" Text="17:00"/>
                </StackPanel>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Location"/>
                    <TextBox x:Name="txtLocation" Width="120" Text="Main Office"/>
                </StackPanel>

                <StackPanel Margin="0,0,10,0">
                    <Button Content="Add Shift" VerticalAlignment="Bottom" Click="AddShift_Click"/>
                    <Button Content="Save to File" VerticalAlignment="Bottom" Click="SaveToFile_Click" Margin="0,5,0,0"/>
                    <Button Content="Load from File" VerticalAlignment="Bottom" Click="LoadFromFile_Click" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="shiftGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Shift ID" Binding="{Binding ShiftID}" Width="80"/>
                    <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="150"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding ShiftDate, StringFormat='{}{0:MM/dd/yyyy}'}" Width="120"/>
                    <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="100"/>
                    <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="100"/>
                    <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
